<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="lanbide">
        <class>lanbide.modelo.Cliente</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
       		<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:lanbide.sqlite3" />
<!--       	<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:C:\Users\curso\git\curso-java\lanbide\src\main\webapp\lanbide.sqlite3" /> -->
<!--        <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:/home/jgarai/git/curso-java/lanbide/src/main/webapp/lanbide.sqlite3" /> -->
            
            <property name="javax.persistence.jdbc.user" value="" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect" />
        </properties>

    </persistence-unit>

</persistence>
